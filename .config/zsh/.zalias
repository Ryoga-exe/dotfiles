# exa
if [[ $(command -v exa) ]]; then
    alias ls='exa --icons'
    alias ll='exa -aahl --icons --group-directories-first'
    alias lt='exa -T -L 3 -a -I "node_modules|.git|.cache" --icons --group-directories-first'
    alias ltl='exa -T -L 3 -a -I "node_modules|.git|.cache" -l --icons --group-directories-first'
fi

# bat
if [[ $(command -v bat) ]]; then
    alias cat=bat
elif [[ $(command -v batcat) ]]; then
    alias cat=batcat
fi

alias vim=nvim
alias -g CC='xclip -selection c'
alias cdgitroot='cd "$(git rev-parse --show-toplevel)"'
alias cd.=cdgitroot
alias cls=clear
